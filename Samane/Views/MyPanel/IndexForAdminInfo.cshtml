@model Samane.Models.ApplicationUser

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="wrapper wrapper-engineer">
    <div class="inner inner-engineer">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h2>اطلاعات کاربری</h2>
                <div class="">
                    <div class="form-group centerflex">
                        @Html.LabelFor(model => model.NameAndLastName, htmlAttributes: new { @class = "control-label lablesizepannel col-md-2" })
