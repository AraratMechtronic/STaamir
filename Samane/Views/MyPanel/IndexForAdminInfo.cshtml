                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group centerflex">
                        @Html.LabelFor(model => model.userRole, htmlAttributes: new { @class = "control-label lablesizepannel col-md-2" })
                        <div class="col-md-10 form-control centerflex">
                            @Html.DisplayFor(model => model.userRole)
                        </div>
                    </div>
                    <div class="form-group centerflex">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label lablesizepannel col-md-2" })
                        <div class="col-md-10 form-control centerflex">
                            @Html.DisplayFor(model => model.UserName)
                        </div>
                    </div>
                    <div class="form-login">
                        <button>
                            @Html.ActionLink("برگشت به لیست", "Index")
