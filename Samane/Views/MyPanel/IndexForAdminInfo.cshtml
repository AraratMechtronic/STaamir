                            @Html.DisplayFor(model => model.NameAndLastName)
                        </div>
                    </div>
                    <div class="form-group centerflex">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label lablesizepannel col-md-2" })
