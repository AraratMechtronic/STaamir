@model IEnumerable<Samane.Models.Hospital>

@{
    ViewBag.Title = "Index";
}
@*for scrolling table*@
<link rel="stylesheet" type="text/css" href="~/css/util.css">
@*<link rel="stylesheet" type="text/css" href="~/css/main.css">*@
@*-------------for sortable th--------------------*@
<link rel="stylesheet" href="~/css/sortable-tables.min.css">
<script src="~/css/sortable-tables.min.js" type="text/javascript"></script>
@*------------------------------------------------*@


<h2>Index</h2>
<div class="limiter">
    <div class="wrapper wrapper-main">
        <div>        <h2 class="center">لیست بیمارستان</h2></div>

        <div class="wrap-table100">
            <div class="table100 ver3 m-b-110">
                @*BARAYE FIX KARDANE TITR
                    <div class="table100-head">
                    <table class="">
                        <thead>
                            <tr class="row100 head">
                                <th class="cell100 column1">
                                    @Html.DisplayNameFor(model => model.Province)
                                </th>
                                <th class="cell100 column2">
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th class="cell100 column3">
                                    @Html.DisplayNameFor(model => model.InChargePerson)
                                </th>
                                <th class="cell100 column4">
                                    @Html.DisplayNameFor(model => model.HospitalName)
                                </th>
                                <th class="cell100 column5">وضعیت</th>
                            </tr>
                        </thead>

                    </table>
                </div>*@

                <div class="table100-body js-pscroll ps--active-y ps">
                    <table class="sortable-table">
                        <thead>
                            <tr class="row100 head">
                                <th class="cell100 column1 ">
                                    @Html.DisplayNameFor(model => model.Province)
                                </th>
                                <th class="cell100 column2">
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th class="cell100 column3">
                                    @Html.DisplayNameFor(model => model.InChargePerson)
                                </th>
                                <th class="cell100 column4">
                                    @Html.DisplayNameFor(model => model.HospitalName)
                                </th>
                                <th class="cell100 column5">
                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                </th>
                                <th class="cell100 column6">وضعیت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td class="cell100 hospitalTabletd">
                                    @Html.DisplayFor(modelItem => item.Province)
                                </td>
                                <td class="cell100 hospitalTabletd">
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td class="cell100 hospitalTabletd">
                                    @Html.DisplayFor(modelItem => item.InChargePerson)
                                </td>
                                <td class="cell100 hospitalTabletd">
                                    @Html.DisplayFor(modelItem => item.HospitalName)
                                </td>
                                <td class="cell100 hospitalTabletd">
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td class="cell100 hospitalTabletd">
                                    @Html.ActionLink("Edit", "Edit", new { hospitalName = item.HospitalName, @class = "fa fa-user-plus" }) |
                                    @Html.ActionLink("Details", "Details", new { hospitalName = item.HospitalName }) |
                                    @Html.ActionLink("Delete", "Delete", new { hospitalName = item.HospitalName, city = item.City })
                                </td>
                            </tr>

                            }

                        </tbody>
                    </table>


                </div>
            </div>

        </div>

        <div class="form-login">
            @Html.ActionLink("بیمارستان جدید", "Create", "Hospital", null, new { @class = "butten" })
        </div>
    </div>
</div>


<style>

    table {
        width: 100%;
        border-collapse: collapse
    }

    td, th {
        padding: 10px;
        border: 1px solid #000
    }
</style>



