                        @Html.DisplayFor(model => model.Category)
                    </div>
                </div>
                <div class="form-group centerflex">
                    @*@Html.DisplayNameFor(model => model.Model)*@
                    @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label lablesize col-md-2" })
                    <div class="col-md-10 form-control centerflex">
                        @Html.DisplayFor(model => model.Model)
                    </div>
                </div>
                <div class="form-group centerflex">
                    @*@Html.DisplayNameFor(model => model.SerialNo)*@
                    @Html.LabelFor(model => model.SerialNo, htmlAttributes: new { @class = "control-label lablesize col-md-2" })
                    <div class="col-md-10 form-control centerflex">
                        @Html.DisplayFor(model => model.SerialNo)
                    </div>
                </div>
                <div class="form-login">
                    <button>
                        @Html.ActionLink("ویرایش", "Edit", new { id = Model.InstrumentId })
                    </button>
                    <button>
                        @Html.ActionLink("برگشت به لیست", "Index")
                    </button>
                </div>
            </div>
        }
    </div>
</div>
