        {
            @Html.AntiForgeryToken()
            <h2>جزئیات</h2>
            <div class="">
                <div class="form-group centerflex">
                    @*@Html.DisplayNameFor(model => model.hospital.Province)*@
                    @Html.LabelFor(model => model.hospital.Province, htmlAttributes: new { @class = "control-label lablesize col-md-2" })
                    <div class="col-md-10 form-control centerflex">
                        @Html.DisplayFor(model => model.hospital.Province, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group centerflex">
                    @*@Html.DisplayNameFor(model => model.Category)*@
                    @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label lablesize col-md-2" })
