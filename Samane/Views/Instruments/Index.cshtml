@model IEnumerable<Samane.Models.Instrument>

@{
    ViewBag.Title = "Index";
}

@*for scrolling table*@
<link rel="stylesheet" type="text/css" href="~/css/util.css">
@*<link rel="stylesheet" type="text/css" href="~/css/main.css">*@
@*-------------for sortable th--------------------*@
<link rel="stylesheet" href="~/css/sortable-tables.min.css">
<script src="~/css/sortable-tables.min.js" type="text/javascript"></script>
@*------------------------------------------------*@
<style>
</style>

<h2>Index</h2>
<div class="limiter">
    <div class="wrapper wrapper-main">
        <div>        <h2 class="center">لیست دستگاه ها</h2></div>

        <div class="wrap-table100">
            <div class="table100 ver3 m-b-110">
                <div class="table100-body js-pscroll ps--active-y ps">
                    <table class="sortable-table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.InstrumentId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.hospital.HospitalName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.hospital.Province)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.hospital.City)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Model)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SerialNo)
                                </th>
                                <th class="cell100">وضعیت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.InstrumentId)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.hospital.HospitalName)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.hospital.Province)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.hospital.City)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.Model)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.DisplayFor(modelItem => item.SerialNo)
                                    </td>
                                    <td class="instrumentTable">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.InstrumentId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.InstrumentId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.InstrumentId })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <div class="form-login">
            @Html.ActionLink("افزودن دستگاه", "Create", "Instruments", null, new { @class = "butten" })
            @*<button>
                    @Html.ActionLink("افزودن دستگاه", "Create")
                </button>*@
        </div>
    </div>
</div>

<style>

    table {
        width: 100%;
        border-collapse: collapse
    }

    td, th {
        padding: 10px;
        border: 1px solid #000
    }
</style>

<script src="~/js/main.js"></script>